    field(PREC, "3")
    field(DTYP, "stream")
    field(INP,  "@DCMotorServer.proto ai(0) $(PORT)")
    field(SCAN, ".5 second")
    field(AOFF, "0")
    field(ASLO, "0.004887585532746823069403714565")  # 5 VDC / 1023 ADC units
    field(HOPR, "5")
    field(LOPR, "0")
}

