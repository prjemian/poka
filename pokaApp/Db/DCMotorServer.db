    field(DRVL, "0")
}

record(ai, "$(P)rate") {
    field(DESC, "update rate")
    field(EGU,  "1/s")
    field(DTYP, "stream")
    field(INP,  "@DCMotorServer.proto rate $(PORT)")
    field(SCAN, ".5 second")
}

record(ao, "$(P)period") {
    field(DESC, "averaging period")
    field(VAL,  "0.5")
    field(PREC, "2")
    field(PINI, "1")
    field(EGU,  "s")
    field(DTYP, "stream")
    field(OUT,  "@DCMotorServer.proto period $(PORT)")
    field(AOFF, "0")
    field(ASLO, "0.001")  # raw units are milliseconds
    field(HOPR, "1000.000")
    field(LOPR, "0.005")
    field(DRVH, "1000.000")
    field(DRVL, "0.005")
}
