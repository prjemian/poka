    field(DTYP, "stream")
    field(OUT,  "@DCMotorServer.proto pwm(11) $(PORT)")
    field(AOFF, "0")
    field(ASLO, "0.01960784313725490196078431372549")  # 5 VDC / 255 ADC units
    field(HOPR, "5")
    field(LOPR, "0")
